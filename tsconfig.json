{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["es2021"],
    "module": "esnext",
    "outDir": "./dist",
    "rootDir": "./src",
    "newLine": "lf",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strict": false,
    "types": ["node"],
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": [
    "dist",
    "build",
    "node_modules",
    "tests",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
