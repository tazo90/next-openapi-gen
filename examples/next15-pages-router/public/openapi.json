  "components": {
    "securitySchemes": {
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "ProductListParamsSchema": {
        "type": "object",
        "properties": {
          "category": {
            "type": "string",
            "nullable": true,
            "description": "Filter by category"
          },
          "minPrice": {
            "type": "number",
            "nullable": true,
            "description": "Minimum price"
          },
          "maxPrice": {
            "type": "number",
            "nullable": true,
            "description": "Maximum price"
          },
          "page": {
            "type": "number",
            "nullable": true,
            "description": "Page number"
          },
          "limit": {
            "type": "number",
            "nullable": true,
            "description": "Results per page"
          }
        }
      },
      "ProductSchema": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Product ID"
          },
          "name": {
            "type": "string",
            "description": "Product name"
          },
          "description": {
            "type": "string",
            "nullable": true,
            "description": "Product description"
          },
          "price": {
            "type": "number",
            "minimum": 0,
            "exclusiveMinimum": true,
            "description": "Product price"
          },
          "stock": {
            "type": "integer",
            "minimum": 0,
            "description": "Stock quantity"
          },
          "category": {
            "type": "string",
            "description": "Product category"
          }
        },
        "required": [
          "id",
          "name",
          "price",
          "stock",
          "category"
        ]
      },
      "CreateProductSchema": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1,
            "description": "Product name"
          },
          "description": {
            "type": "string",
            "nullable": true,
            "description": "Product description"
          },
          "price": {
            "type": "number",
            "minimum": 0,
            "exclusiveMinimum": true,
            "description": "Product price"
          },
          "stock": {
            "type": "integer",
            "minimum": 0,
            "default": 0,
            "description": "Stock quantity"
          },
          "category": {
            "type": "string",
            "description": "Product category"
          }
        },
        "required": [
          "name",
          "price",
          "stock",
          "category"
        ]
      },
      "ProductIdParamsSchema": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Product ID"
          }
        },
        "required": [
          "id"
        ]
      },
      "UserListParamsSchema": {
        "type": "object",
        "properties": {
          "page": {
            "type": "number",
            "nullable": true,
            "description": "Page number"
          },
          "limit": {
            "type": "number",
            "nullable": true,
            "description": "Results per page"
          },
          "search": {
            "type": "string",
            "nullable": true,
            "description": "Search query"
          }
        }
      },
      "UserSchema": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "User ID"
          },
          "name": {
            "type": "string",
            "description": "Full name"
          },
          "email": {
            "type": "string",
            "format": "email",
            "description": "Email address"
          },
          "createdAt": {
            "type": "string",
            "description": "Creation date"
          }
        },
        "required": [
          "id",
          "name",
          "email",
          "createdAt"
        ]
      },
      "CreateUserSchema": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "minLength": 2,
            "description": "Full name"
          },
          "email": {
            "type": "string",
            "format": "email",
            "description": "Email address"
          },
          "password": {
            "type": "string",
            "minLength": 8,
            "description": "Password (min 8 characters)"
          }
        },
        "required": [
          "name",
          "email",
          "password"
        ]
      },
      "UserIdParamsSchema": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "User ID"
          }
        },
        "required": [
          "id"
        ]
      },
      "UpdateUserSchema": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "minLength": 2,
            "nullable": true,
            "description": "Full name"
          },
          "email": {
            "type": "string",
            "format": "email",
            "nullable": true,
            "description": "Email address"
          }
        }
      }
    },
    "responses": {}
  },
