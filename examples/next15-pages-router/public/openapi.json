    "/products": {
      "get": {
        "operationId": "get-products",
        "summary": "Get all products",
        "description": "Retrieve a list of products with optional filtering",
        "tags": [
          "Products"
        ],
        "parameters": [
          {
            "in": "query",
            "name": "category",
            "schema": {
              "type": "string",
              "description": "Filter by category"
            },
            "required": false,
            "description": "Filter by category"
          },
          {
            "in": "query",
            "name": "minPrice",
            "schema": {
              "type": "number",
              "description": "Minimum price"
            },
            "required": false,
            "description": "Minimum price"
          },
          {
            "in": "query",
            "name": "maxPrice",
            "schema": {
              "type": "number",
              "description": "Maximum price"
            },
            "required": false,
            "description": "Maximum price"
          },
          {
            "in": "query",
            "name": "page",
            "schema": {
              "type": "number",
              "description": "Page number"
            },
            "required": false,
            "description": "Page number"
          },
          {
            "in": "query",
            "name": "limit",
            "schema": {
              "type": "number",
              "description": "Results per page"
            },
            "required": false,
            "description": "Results per page"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/ProductSchema"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "operationId": "post-products",
        "summary": "Create a new product",
        "description": "Add a new product to the catalog",
        "tags": [
          "Products"
        ],
        "parameters": [],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateProductSchema"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProductSchema"
